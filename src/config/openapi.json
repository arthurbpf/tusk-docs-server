{
	"openapi": "3.0.0",
	"info": {
		"title": "Tusk Docs",
		"version": "0.0.1"
	},
	"servers": [
		{
			"url": "https://tusk-docs.herokuapp.com",
			"description": "Production"
		},
		{
			"url": "http://localhost:3333",
			"description": "Local environment"
		}
	],
	"paths": {
		"/users": {
			"post": {
				"summary": "Creates a new user.",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"anyOf": [
									{
										"$ref": "#/components/schemas/Company"
									},
									{
										"$ref": "#/components/schemas/Employee"
									}
								]
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "A JSON object representing created user"
					}
				}
			}
		},
		"/users/me": {
			"get": {
				"summary": "Returns logged user info",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"responses": {
					"200": {
						"description": "A JSON object representing logged user"
					}
				}
			}
		},
		"/sessions": {
			"post": {
				"description": "Authenticate user",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/AuthObject"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "A JWT token"
					}
				}
			}
		},
		"/clients": {
			"post": {
				"summary": "Creates a client",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/AuthObject"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "A JSON object representing logged user"
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"Company": {
				"type": "object",
				"properties": {
					"email": {
						"type": "string"
					},
					"nickname": {
						"type": "string"
					},
					"username": {
						"type": "string"
					},
					"password": {
						"type": "string"
					},
					"company": {
						"type": "object",
						"properties": {
							"legalName": {
								"type": "string"
							},
							"businessName": {
								"type": "string"
							},
							"registration": {
								"type": "string"
							}
						}
					}
				}
			},
			"Employee": {
				"type": "object",
				"properties": {
					"email": {
						"type": "string"
					},
					"nickname": {
						"type": "string"
					},
					"username": {
						"type": "string"
					},
					"password": {
						"type": "string"
					},
					"employee": {
						"type": "object",
						"properties": {
							"fullName": {
								"type": "string"
							},
							"phoneNumber": {
								"type": "string"
							},
							"registration": {
								"type": "string"
							}
						}
					}
				}
			},
			"AuthObject": {
				"type": "object",
				"properties": {
					"email": {
						"type": "string"
					},
					"username": {
						"type": "string"
					},
					"password": {
						"type": "string"
					}
				}
			},
			"ClientCreation": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string"
					}
				}
			}
		},
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	}
}

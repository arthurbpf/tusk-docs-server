{
	"openapi": "3.0.0",
	"info": {
		"title": "Tusk Docs",
		"version": "0.0.1"
	},
	"servers": [
		{
			"url": "https://tusk-docs.herokuapp.com",
			"description": "Production"
		},
		{
			"url": "http://localhost:3333",
			"description": "Local environment"
		}
	],
	"paths": {
		"/users": {
			"post": {
				"summary": "Creates a new user.",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CreateUserDTO"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "A object representing created user"
					}
				}
			}
		},
		"/users/me": {
			"get": {
				"summary": "Returns logged user info",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"responses": {
					"200": {
						"description": "A object representing logged user"
					}
				}
			}
		},
		"/sessions": {
			"post": {
				"summary": "Authenticate user",
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/AuthObject"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "A JWT token"
					}
				}
			}
		},
		"/clients": {
			"post": {
				"summary": "Creates a client",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CreateClientDTO"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "A object representing the created client"
					}
				}
			},
			"get": {
				"summary": "Retrieves user's client list",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"responses": {
					"200": {
						"description": "A list of clients created by logged user"
					}
				}
			}
		},
		"/documents": {
			"post": {
				"summary": "Creates a document",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"requestBody": {
					"required": true,
					"content": {
						"application/json": {
							"schema": {
								"$ref": "#/components/schemas/CreateDocumentDTO"
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "A object representing the created document"
					}
				}
			},
			"get": {
				"summary": "Retrieves client's documents list",
				"security": [
					{
						"bearerAuth": []
					}
				],
				"responses": {
					"200": {
						"description": "A list of clients created by logged user"
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"CreateUserDTO": {
				"type": "object",
				"properties": {
					"email": {
						"type": "string"
					},
					"nickname": {
						"type": "string"
					},
					"username": {
						"type": "string"
					},
					"password": {
						"type": "string"
					}
				}
			},
			"AuthObject": {
				"type": "object",
				"properties": {
					"email": {
						"type": "string"
					},
					"username": {
						"type": "string"
					},
					"password": {
						"type": "string"
					}
				}
			},
			"CreateClientDTO": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"description": {
						"type": "string"
					}
				}
			},
			"CreateDocumentDTO": {
				"type": "object",
				"properties": {
					"title": {
						"type": "string"
					},
					"description": {
						"type": "string"
					},
					"clientId": {
						"type": "string"
					},
					"file": {
						"type": "string",
						"format": "binary"
					}
				}
			}
		},
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
		}
	}
}

{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"allowJs": true,
		"strict": true,
		"paths": {
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
			"@config/*": ["config/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true
	}
}

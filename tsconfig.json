{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"allowJs": true,
		"strict": true,
		"paths": {
			"@modules/*": ["modules/*"],
			"@shared/*": ["shared/*"],
			"@config/*": ["config/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"plugins": [
			{
				"transform": "typescript-transform-paths"
			}
		]
	}
}
